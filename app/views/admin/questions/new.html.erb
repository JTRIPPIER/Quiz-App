<p>
  <%= link_to 'back', admin_quiz_path(@quiz) %>
</p>

<h3>Add a new question</h3>

<%= form_for @question, url: admin_quiz_questions_path(@quiz), :html => {:class => "form-horizontal"} do |form| %>
<div class="form-group">
  <%= form.label :body, "Question", class: "col-sm-2" %>
  <div class="col-sm-12">
    <%= form.text_field :body, class: 'form-control' %>
  </div>
</div>

<label>Answers</label>

<div id="multiple-answers">
  <%= form.fields_for :answers do |answer_form| %>
    <%= render "answer_fields", f: answer_form %>
  <% end %>
</div>

<div class="form-group">
  <div class="col-sm-12">
    <%= link_to_add_association 'Add another answer', form, :answers,
      'data-association-insertion-node': '#multiple-answers',
      'data-association-insertion-method': 'append' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-12">
    <%= form.submit 'Save', class: 'btn btn-success', id: 'submit_button' %>
  </div>
</div>
<% end %>
