<div><%= link_to 'back', admin_quizzes_path %></div>

<h3>Add a new answer</h3>

<%= form_for @answer, url: admin_quiz_question_answers_path(@quiz, @question) do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
